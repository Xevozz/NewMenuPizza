@page
@using NewMenuPizza.Kunder
@model NewMenuPizza.Pages.Kontrolpanel.Index

@{
    ViewData["Title"] = "Menu";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <style>
      
      * {
        box-sizing: border-box;
      }
      
      .row {
        display: flex;
      }
        
      .column {
        flex: 50%; 
        padding: 10px;
      }
      
      h1 {
        text-align: center;
      }
      
      
      </style>
</head>
<body>
<h1>Kontrolpanel</h1>
<div class="row">
    <div class="column">
        <h2>Funktioner</h2>
    </div>
    
    <div class="column">
        <h2>Kunder</h2>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Kunde Nummer</th>
                <th>Navn</th>
                <th>Telefon</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Kunde k in Model.kunders)
            {
                <tr>
                    <td>@k.KundeNummer</td>
                    <td>@k.Navn</td>
                    <td>@k.Tlf</td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>
</body>
</html>